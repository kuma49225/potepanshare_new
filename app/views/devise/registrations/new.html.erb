<div class="registration-form-container">
  <div class="registration-form">
    <h2>新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :name, "ユーザー名" %><span class="text-danger">*</span><br />
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <% if resource.errors[:name].present? %>
          <div class="text-danger">
            <%= resource.errors[:name].first %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><span class="text-danger">*</span><br />
        <%= f.email_field :email, class: 'form-control' %>
        <% if resource.errors[:email].present? %>
          <div class="text-danger">
            <%= resource.errors[:email].first %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><span class="text-danger">*</span><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <% if resource.errors[:password].present? %>
          <div class="text-danger">
            <%= resource.errors[:password].first %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        <% if resource.errors[:password_confirmation].present? %>
          <div class="text-danger">
            <%= resource.errors[:password_confirmation].first %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to 'アカウントをお持ちの方はログイン', new_user_session_path, class: 'btn btn-outline-primary mt-3' %>
  </div>
</div>
